<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	<display-name>Student Database</display-name>
	
	<welcome-file-list> 
		<welcome-file>ListStudents.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Student</servlet-name>
		<servlet-class>com.val.WebServlet.Student</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Student</servlet-name>
		<url-pattern>/students</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddStudent</servlet-name>
		<servlet-class>com.val.WebServlet.AddStudent</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddStudent</servlet-name>
		<url-pattern>/add-student</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UpdateStudent</servlet-name>
		<servlet-class>com.val.WebServlet.UpdateStudent</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateStudent</servlet-name>
		<url-pattern>/update-student</url-pattern>
	</servlet-mapping>
</web-app>